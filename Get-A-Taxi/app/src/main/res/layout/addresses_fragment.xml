<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:gravity="bottom" >

    <!-- Address inputs-->
    <RelativeLayout
        android:id="@+id/destinationGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_confirm_location"
        >
        <TextView
            android:id="@+id/destinationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />


        <Button
            android:id="@+id/destinationAddress_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stored_location_btn_txt"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/startGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/destinationGroup"
        >
        <TextView
            android:id="@+id/startAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/startAddress_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stored_location_btn_txt"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>